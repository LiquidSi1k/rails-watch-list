<div class="d-flex justify-content-between p-3">
  <div class="">Icon</div>
  <div class="d-flex">
    <p class="px-2"><%= link_to "My lists", lists_path%></p>
    <p class="px-2"><%= link_to "New list", new_list_path%></p>
  </div>
</div>
<hr>
<div class="container w-100 text-center">
  <h1> <%= @list.name %> </h1>
  <p>classic</p>
  </div>
    <hr>
      <h3 class="container">My Lists</h3>
    <div class="container d-flex">
      <%= link_to "Add a movie", new_list_bookmark_path(@list, @bookmark)%> | <p>Viewings</p>
    </div>
<div class="container d-flex justify-content-between p-3">
  <div>
    <div class="text-center">
        <ul class="d-flex">
          <% @list.bookmarks.each do |bookmark| %>
            <div class="w-25">
            <img src="<%= bookmark.movie.poster_url %>" alt="movie-image" class="w-75">
            <p style="list-style-type: none;"><%= bookmark.movie.title %></p>
            <p> <%= bookmark.movie.overview %> </p>
              <%= link_to "Delete",
                bookmark_path(bookmark),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
              %>
            </div>
          <% end %>
        </ul>
    </div>
  </div>
</div>
